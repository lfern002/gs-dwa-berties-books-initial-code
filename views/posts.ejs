<!-- views/posts.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            padding: 10px;
            text-align: center;
        }

        h1 {
            color: #fff;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            background-color: #fff;
            margin: 10px 0;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        p {
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <header>
        <h1>List of Posts</h1>
    </header>

    <% if (posts.length > 0) { %>
        <ul>
            <% posts.forEach(post => { %>
                <li><%= post.text %> by <%= post.username %></li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No posts available.</p>
    <% } %>
</body>
</html>
